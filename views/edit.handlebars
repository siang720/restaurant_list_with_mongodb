<div class="container my-5">
  <form action="/restaurants/{{{restaurant.id}}}?_method=PUT" method='POST'>
    <div class="form-group">
      <label for="name">名字</label>
      <input type="text" class="form-control" id="name" placeholder="" name="name" value="{{{restaurant.name}}}">
    </div>
    <div class="form-group">
      <label for="name_en">英文名字</label>
      <input type="text" class="form-control" id="name_en" placeholder="" name="name_en"
        value="{{{restaurant.name_en}}}">
    </div>
    <div class="form-group">
      <label for="category">餐廳類型</label>
      <input type="text" class="form-control" id="category" placeholder="" name="category"
        value="{{{restaurant.category}}}">
    </div>
    <div class="form-group">
      <label for="image">照片連結</label>
      <input type="text" class="form-control" id="image" placeholder="" name="image" value="{{{restaurant.image}}}">
    </div>
    <div class="form-group">
      <label for="location">地址</label>
      <input type="text" class="form-control" id="location" placeholder="" name="location"
        value="{{{restaurant.location}}}">
    </div>
    <div class="form-group">
      <label for="phone">電話</label>
      <input type="text" class="form-control" id="phone" placeholder="" name="phone" value="{{{restaurant.phone}}}">
    </div>
    <div class="form-group">
      <label for="google_map">Google Map連結</label>
      <input type="text" class="form-control" id="google_map" placeholder="" name="google_map"
        value="{{{restaurant.google_map}}}">
    </div>
    <div class="form-group">
      <label for="rating">評價</label>
      <input type="number" step="0.01" class="form-control" id="rating" placeholder="" name="rating"
        value="{{{restaurant.rating}}}">
    </div>
    <div class="form-group">
      <label for="description">簡短描述</label>
      <input type="text" class="form-control" id="description" placeholder="" name="description"
        value="{{{restaurant.description}}}">
    </div>

    <button type="submit" class="btn btn-info">修改資訊</button>
  </form>
</div>